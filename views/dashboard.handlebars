<section>
  <h2>Welcome, {{username}}!</h2>
  <div>
    <a href="/dashboard/newBlog"><button class="btn btn-dark"><i class="fas fa-plus mr-1"></i> New Blog!</button></a>
  </div>
  <div class="border border-5 border mt-3">
    <h2 class="border border-3 border-dark text-center my-0">Your Blogs</h2>
    <div class="col">
      {{#if blogs.length}}
      {{#each blogs as |blog|}}
      {{> dash-blog-details}}
      {{/each}}
      {{else}}
      <h3>Get those fingers clicking! <i class="far fa-keyboard"></i></h3>
      {{/if}}
    </div>
  </div>

</section>